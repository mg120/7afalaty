<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/show_item_bg"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/show_item_bg"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/service_item_img_id"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:background="@drawable/show_item_bg"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/notification_userName_txt_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="@string/hafalaty"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/notification_item_desc_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="3"
                android:text="@string/details" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/notification_owner_layout_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/accept_booking_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/login_btn_bg"
            android:padding="5dp"
            android:text="@string/accept"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/reject_booking_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginRight="@dimen/pdlg_space_1.0x"
            android:background="@drawable/login_btn_bg"
            android:text="@string/reject"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>